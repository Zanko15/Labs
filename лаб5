#include <iostream>
using namespace std;
int main()
{
	setlocale(LC_ALL, "ru");
	double a, b, v1, v2, s, t, c, nok,  a1, a2, b1, b2, AA2, c1, c2, B2, C2, A2, del, del1, del2;
	double y, x;
	float pi = 3.14;
	cout << "Задание 1" << endl;
	cout << "Введите количество градусов" << endl;
	cout << "X = "; 
  cin >> x;
	cout << "Количество радиан: " << x << " * 3.14 / 180 = " << x * pi / 180 << endl;

	cout << "Задание 2" << endl;
	cout << "Введите количество радиан" << endl;
	cout << "X = ";
	cin >> x;
	cout << "Количество градусов: " << x << "* 180 / 3.14 = " << x / pi * 180 << endl;

	cout << "Задание 3" << endl;
	cout << "X кг конфет стоит  ";
	cin >> a;
	cout << "Введите количество кг ";
	cin >> x;
	cout << "один кг стоит " << a / x << endl;
	cout << "введите кол-во кг" << endl;
	cin >> y;
	cout << y << " Кг конфет стоит: " << y * (a/x) << endl;

	cout << "Задание 4" << endl;
	cout << "Скорость первого автомобиля = "; 
  cin >> v1;
	cout << "Скорость второго автомобиля = "; 
  cin >> v2;
	cout << "Скорость отдаления: v1 + v2 = " << v1 + v2 << endl;
	cout << "Расстояние между машинами(км) = "; 
  cin >> s;
	cout << "Количество часов удаления: "; 
  cin >> t;
	cout << "Расстояние между ними через " << t << " часов = " << s + t * (v1 + v2) << " км" << endl;

	cout << "Задание 4" << endl;
	cout << "Введите коэфф-т A и B" << endl;
	cout << "A = "; 
  cin >> a;
	cout << "B = "; 
  cin >> b;
	cout << a << "X + " << b << " = " << -(b / a) << endl;

	cout << "Задание 6" << endl;
	cout << "A1 = "; cin >> a1; 
	cout << "A2 = "; cin >> a2; 
	cout << "B1 = "; cin >> b1;
	cout << "B2 = "; cin >> b2; 
	cout << "C1 = "; cin >> c1;
	cout << "C2 = "; cin >> c2; 

	del = a1 * b2 - a2 * b1;
	del1 = c1 * b2 - c2 * b1;
	del2 = a1 * c2 - a2 * c1;
	cout << "x равен" << del1 / del << endl;
	cout << "y равен" << del2 / del << endl;
  
